" * Key map here for all third party app 's plugin to use

let g:indent_guides_enable_on_vim_startup = 1

inoremap jk <ESC>

nnoremap <leader><space> :nohlsearch<CR>

map <F2> :retab <CR> :w <CR>

" `gf` opens file under cursor in a new vertical split
nnoremap gf :vertical wincmd f<CR>

nnoremap <F6> :set invpaste paste?<CR>
set pastetoggle=<F6>

" --- Save as sudo
if has('unix')
  command W :execute ':silent w !sudo tee % > /dev/null' | :edit!
endif

" --- Quit all faster ---
abbreviate qq qa

nnoremap <C-l> <C-w>l
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k

map <F4> <ESC>:exec stridx(&mouse,'a') ? "set mouse+=a" : "set mouse-=a"<CR>

" CTRL + _ to comment

" * Settings

" set softtabstop = 0
set expandtab
set tabstop=4
set smartindent
set autoindent
set shiftwidth=2
set softtabstop=4

" FOLD -- cLOSE/oPen on file
set foldenable
set foldlevelstart=10
set foldnestmax=10
set foldmethod=indent

set nocompatible
" set backspace=2
set backspace=indent,eol,start
set number
set incsearch        " Search on typing
set hlsearch         " Highlight search
set showcmd
set cindent
set nowb
set swapfile
set cursorline
set autoread
set autowrite
set laststatus=2 " Always show airline
set ttimeoutlen=50
set wildmenu
set nolazyredraw
set showmatch
set ttyfast
set noeb vb t_vb=
set nolist
set isprint=
set display+=uhex

if has('multi_byte')
  set encoding=utf-8
  set fileencodings=utf-8,iso-2022-jp,cp932,euc-jp,ucs-bom,sjis,latin1,default
  set fileformats=unix,dos,mac
end

" https://github.com/numirias/security/blob/master/doc/2019-06-04_ace-vim-neovim.md
set modelines=0
set nomodeline

" Load plugins
if filereadable($HOME . '/.vim/autoload/init_runtime.vim')
  execute init_runtime#Init()
endif

