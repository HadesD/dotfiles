If:
    PathMatch: .*

CompileFlags:
    Add:
        - -Wall
        - -xc++
        - -std=c++17
        - --target=x86_64-linux-gnu
        - --include-directory=/usr/include/c++/11
        - --include-directory=/usr/include/x86_64-linux-gnu/c++/11
    Compiler: g++

InlayHints:
    Enabled: Yes
    Designators: No
    DeducedTypes: Yes
    ParameterNames: Yes
    BlockEnd: Yes
    TypeNameLimit: 24

Hover:
    ShowAKA: Yes
